@model MyBlog.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "تغییر رمز عبور";
}

<div class="col-lg-6 col-lg-offset-1 col-md-7 col-md-offset-0">
    <h2>تغییر رمز عبور</h2>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <div class="row control-group">
            <div class="form-group col-xs-8 floating-label-form-group controls">
                @Html.LabelFor(m => m.OldPassword)
                @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control left-text", placeholder = "رمز عبور فعلی" } })
                @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-8 floating-label-form-group controls">
                @Html.LabelFor(m => m.NewPassword)
                @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control left-text", placeholder = "رمز عبور جدید" } })
                @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-8 floating-label-form-group controls">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control left-text", placeholder = "تکرار رمز عبور جدید" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
        </div>
        <br>
        <div class="row">
            <div class="form-group col-xs-8">
                <button type="submit" class="btn btn-default pull-left">ارسال</button>
            </div>
        </div>
    }
</div>
